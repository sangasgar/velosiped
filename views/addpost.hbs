<div class="row">

  <div class='col m-5'>
    <center>
    <div id='map' class='map'></div>
    <script src='https://api-maps.yandex.ru/2.1/?apikey=75ff8d8f-55b5-40d7-afee-fd53548eedff&lang=ru_RU'></script>

    </center>
  </div>

  <div class="col">

    <main class="form-signin">

      <form action="/posts/add" method="post">
        <center>
          <h1 style="padding-top: 50%" ; class="h3 mb-3 fw-normal">Add new route</h1>
        </center>

        <div class="form-floating">
          <input type="text" name="title" class="form-control" data-title="title" placeholder="" id="floatingInput" required>
          <label for="floatingInput">Route title</label>
        </div>
        <div class="form-floating">
          <input type="text" name="location" class="form-control" id="floatingPassword" required>
          <label for="floatingPassword">City</label>
        </div>
        <div class="form-floating">
          <input type="text" name="start" class="form-control" id="floatingPassword">
          <label for="floatingPassword">START
          </label>
        </div>
        <div class="form-floating">
          <input type="text" name="finish" class="form-control" id="floatingPassword">
          <label for="floatingPassword">FINISH</label>
        </div>
        <div class="form-floating">
          <input type="text" name="lengthRoad" class="form-control" id="floatingPassword" readonly="readonly">
          <label for="floatingPassword">Length</label>
            <input type="hidden" name="user_id"  value="{{user.ids}}" placeholder="Растояние"><br>
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Add</button>

      </form>
<div>
    </main>

  </div>

</div>
